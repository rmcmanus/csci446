<form action="form" method="get">
	<input type="submit" value=Sort!></input>
</form>

<table>
	<tr>
	    <th>ID</td>
	   	<th>Title</td>
	    <th>Author</td>
	    <th>Language</td>
	    <th>Year</td>
	    <th>Copies</td>
	</tr>

	<% @books.each do |book| %>
		<tr>
	    	<td><%=book.id%></td>
	    	<td><%=book.title%></td>
	    	<td><%=book.author%></td>
	    	<td><%=book.language%></td>
	    	<td><%=book.published%></td>
	    	<td><%=book.sold%></td>
	  	</tr>
	<% end %>
</table>